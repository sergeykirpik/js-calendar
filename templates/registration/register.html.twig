{% extends 'base.html.twig' %}

{% block title %}Registration!{% endblock %}

{% block body %}
    {% include 'utils/_show_message.html.twig' %}
    <div class="container">
        <h1>Welcome to Events Calendar!</h1>
        <div class="dialog">
            <h2>Please register</h2>
            <div class="dialog-container">
                <p>Your email: {{ email }}</p>
                <form action="" method="post">
                    <input type="hidden" name="_csrf_token" value={{ csrf_token('register') }}>
                    <div class="form-group mb1">
                        <label for="password">Enter your password:</label>
                        <input type="password" name="password" id="password">
                    </div>
                    <div class="form-group mb2">
                        <label for="verify-password">Verify your password:</label>
                        <input type="password" name="password2" id="verify-password">
                    </div>
                    <button class="btn btn-primary" type="submit">Register</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
