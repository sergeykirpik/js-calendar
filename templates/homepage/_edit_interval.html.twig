<div class="dialog hidden">
    <h2 class="drag-handle">Edit Event<span class="status"></span></h2>
    <div class="dialog-container">
        <form>
            <div class="form-group mb2">
                <label for="title">Title: </label>
                <input id="title" type="text" name="event[title]">
            </div>

            <div class="form-group mb2">
                <label for="description">Description: </label>
                <textarea name="event[description]" id="description" rows="3"></textarea>
            </div>

            <div class="form-group mb2">
                <label for="startDate">Start date: </label>
                <div class="form-group inline">
                    <input type="date" name="event[startDate]" id="startDate">
                    <label for="startTime">&nbsp;</label>
                    <input type="time" name="event[startTime]" id="startTime">
                </div>
            </div>

            <div class="form-group mb2">
                <label for="endDate">End date: </label>
                <div class="form-group inline">
                    <input type="date" name="event[endDate]" id="endDate">
                    <label for="endTime">&nbsp;</label>
                    <input type="time" name="event[endTime]" id="endTime">
                </div>
            </div>

            <div class="form-group inline mb2 v-center">
                <label for="color">Color:&nbsp;</label>
                <input type="color" name="event[color]" id="color" class="d-none">
                <label for="color" class="color-swatch">
            </div>

            <div class="form-group mb2">
                <label for="author">Author:</label>
                <input id="author" type="text" disabled class="author">
            </div>
        </form>
        <pre class="info d-none">

        </pre>
        <div d-flex inline>
            <button type="button" class="btn-close">Close</button>
            <button type="submit" class="btn-submit f-right">Apply</button>
        </div>
    </div><!-- .dialog-container -->
</div>
