{% extends 'base.html.twig' %}

{% block title %}Hello Calendar!{% endblock %}

{% block body %}
    <div class="container">
        <div class="calendar">
            <div class="calendar-row">
                {% for day in days_of_week %}
                    <div class="calendar-head">{{ day }}</div>
                {% endfor %}
            </div>
            {% for week in 0..5 %}
                <div class="calendar-row">
                {% for day in 0..6 %}
                    {% set n = week * 7 + day %}
                    <div class="calendar-cell">
                        <span class="day-label">{{ n }}</span>
                    </div>
                {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
